<body>

<header>
  <h1>Kompozisyon Okuyucu</h1>
  <p>Öğretmenler için pratik değerlendirme aracı</p>
</header>

<main>
  <label>Öğrenci Adı</label>
  <input type="text" id="studentName" placeholder="Örn: Ahmet Yılmaz" />

  <label>Kompozisyon Konusu</label>
  <input type="text" id="topic" placeholder="Örn: Teknoloji ve İnsan" />

  <label>Kağıt Fotoğrafı</label>
  <input type="file" id="imageInput" accept="image/*" />

  <button onclick="analyze()">Analizi Başlat</button>

  <div id="preview"></div>
  <div id="result" class="result" style="display:none;"></div>
</main>

<script>
function analyze() {
  const name = document.getElementById("studentName").value;
  const topic = document.getElementById("topic").value;
  const file = document.getElementById("imageInput").files[0];

  if (!name || !topic || !file) {
    alert("Lütfen tüm alanları doldurun.");
    return;
  }

  const reader = new FileReader();
  reader.onload = function(e) {
    document.getElementById("preview").innerHTML =
      "<h3>Yüklenen Görsel</h3><img src='" + e.target.result + "' />";

    document.getElementById("result").style.display = "block";
    document.getElementById("result").innerHTML = `
      <h3>Örnek Değerlendirme</h3>
      <p><strong>Öğrenci:</strong> ${name}</p>
      <p><strong>Konu:</strong> ${topic}</p>
      <p><strong>Yazım:</strong> 4 / 5</p>
      <p><strong>Yapı:</strong> 3 / 5</p>
      <p><strong>İçerik:</strong> 4 / 5</p>
      <p><em>Not: Yapay zekâ entegrasyonu eklenebilir.</em></p>
    `;
  };
  reader.readAsDataURL(file);
}
</script>

</body>
